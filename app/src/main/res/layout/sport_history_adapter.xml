<?xml version="1.0" encoding="utf-8"?>
<com.common.swipe.SwipeMenuLayoutA
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        app:ios="true"
        app:leftSwipe="true"
        app:swipeEnable="true"
        android:id="@+id/swipeMenuLayoutA"
>
    <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:background="@drawable/list_item_bg"
        >
            <com.common.base.CustomFontDigitTextView
                    android:id="@+id/infoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/sfs_s4"
                    android:textColor="@color/sfs_c5"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.2"
            />
        </LinearLayout>

        <ImageView style="@style/full_line_style"/>
    </LinearLayout>

    <com.common.base.CustomFontTextView
            android:id="@+id/delBtnTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/sfs_c3"
            android:text="删除"
            android:gravity="center"
            android:textSize="@dimen/sfs_s4"
            android:textColor="@color/sfs_c1"
    />



</com.common.swipe.SwipeMenuLayoutA>