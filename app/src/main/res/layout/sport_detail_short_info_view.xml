<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/white_top_small_corner_rectangle_selector"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:layout_marginTop="15dp"
    >
        <com.common.base.CustomFontDigitTextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12‘12"
                android:textSize="@dimen/sfs_s14"
                android:gravity="center"
                android:textColor="@color/sfs_c10"
                android:paddingLeft="15dp"
        />

        <com.common.base.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sfs_c10"
                android:text="公里"
                android:textSize="@dimen/sfs_s3"
                android:paddingLeft="2dp"
        />

        <com.common.base.CustomFontTextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sfs_c7"
                android:text="2019"
                android:textSize="@dimen/sfs_s3"
                android:paddingLeft="2dp"
                android:gravity="right"
                android:paddingRight="15dp"
        />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
    >
        <com.common.base.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慢"
                android:paddingLeft="15dp"
                android:textSize="@dimen/sfs_s1"
                android:textColor="@color/path_color_c9"
                android:layout_gravity="center_vertical"
        />

        <ProgressBar
                android:id="@+id/progressbar"
                style="@style/pace_horizontal_progress_bar"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
        />

        <com.common.base.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快"
                android:textSize="@dimen/sfs_s1"
                android:textColor="@color/path_color_c1"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
    >
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
            >
                <com.common.base.CustomFontDigitTextView
                        android:id="@+id/avgPaceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12‘12"
                        android:textSize="@dimen/sfs_s11"
                        android:gravity="center"
                        android:textColor="@color/sfs_c10"
                />

                <com.common.base.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="平均配速"
                        android:textSize="@dimen/sfs_s3"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                />
            </LinearLayout>

        </RelativeLayout>

        <ImageView style="@style/full_line_style"
                   android:layout_width="@dimen/basic_line_height"
                   android:layout_height="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="20dp"
        />

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
            >
                <com.common.base.CustomFontDigitTextView
                        android:id="@+id/durationTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12‘12"
                        android:textSize="@dimen/sfs_s11"
                        android:gravity="center"
                        android:textColor="@color/sfs_c10"
                />

                <com.common.base.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="时长"
                        android:textSize="@dimen/sfs_s3"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                />
            </LinearLayout>

        </RelativeLayout>

        <ImageView style="@style/full_line_style"
                   android:layout_width="@dimen/basic_line_height"
                   android:layout_height="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="20dp"
        />

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
            >
                <com.common.base.CustomFontDigitTextView
                        android:id="@+id/calorieTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12‘12"
                        android:textSize="@dimen/sfs_s11"
                        android:gravity="center"
                        android:textColor="@color/sfs_c10"
                />

                <com.common.base.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="大卡"
                        android:textSize="@dimen/sfs_s3"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>